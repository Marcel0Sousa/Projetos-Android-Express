<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewFrom">
        <item name="android:background">@drawable/shape_text_view</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="EditTextForm">
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:maxLength">3</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="ButtonFrom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:backgroundTint">@color/pine_green</item>

    </style>

</resources>