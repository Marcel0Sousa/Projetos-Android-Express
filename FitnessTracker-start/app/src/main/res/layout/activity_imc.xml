<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/color_imc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImcActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imc_description" />

        <EditText
            android:id="@+id/edt_img_weight"
            style="@style/EditTextForm"
            android:hint="@string/weight_kg"
            android:inputType="number" />

        <EditText
            android:id="@+id/edt_imc_height"
            style="@style/EditTextForm"
            android:hint="@string/height_cm"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_imc_send"
            style="@style/ButtonFrom"
            android:text="@string/label_calculate" />

    </LinearLayout>

</ScrollView>