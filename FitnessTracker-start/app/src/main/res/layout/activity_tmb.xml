<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imc_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_tmb"
    android:orientation="vertical"
    tools:context=".ImcActivity">

    <LinearLayout
        android:id="@+id/imc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tmb_desc" />

        <EditText
            android:id="@+id/edt_tmb_weight"
            style="@style/EditTextForm"
            android:hint="@string/weight_kg" />

        <EditText
            android:id="@+id/edt_tmb_height"
            style="@style/EditTextForm"
            android:hint="@string/height_cm" />

        <EditText
            android:id="@+id/edt_tmb_age"
            style="@style/EditTextForm"
            android:hint="@string/age" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AutoTextViewForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/auto_lifestyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_imc_send"
            style="@style/ButtonFrom"
            android:textColor="@color/white"
            android:backgroundTint="@color/english_red"
            android:text="@string/label_calculate" />

    </LinearLayout>

</ScrollView>